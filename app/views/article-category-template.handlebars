<div class="sitemap">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#/home">Home</a></li>
        <li class="breadcrumb-item">{{category}}</li>

    </ol>
</div>
<div class="row articles-containter">
    {{#each articles}}
    <div class="col- articles-single-article">
        <a href="#/article/{{_id}}">
            <div class="single-article-image-containter">
                <div class="single-article-category">
                    {{category}}
                </div>
                <img class="single-article-image" src="http://localhost:1337/api/article/image/{{image}}" />
                <div class="single-article-date">
                    <span>{{date.month}}</span>
                    <span> {{date.day}}</span>
                </div>
            </div>

            <div class="single-article-title">
                {{{title}}}
            </div>

            <div class="single-article-author">
                AUTHOR {{author}}
            </div>

            <div class="single-article-content">
                {{{content}}}
            </div>

            <img class="bottom-line" src="../images/bottom-line.jpg">
        </a>
    </div>
    {{/each}}
</div>

<div class="row pagination-container no-gutters">
    <div class="d-flex justify-content-start" id="previous">
        <a href="#/1">«</a>
    </div>

    <div class="col d-flex justify-content-center" id="pages">
        <a href="#/1">1</a>
        <a href="#/1">2</a>
        <a href="#/1">3</a>
        <a href="#/1">4</a>
    </div>

    <div class="d-flex justify-content-end" id="next">
        <a href="#/1">»</a>
    </div>
</div>